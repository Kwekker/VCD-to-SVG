{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Styles",
  "description": "Cool schema for svg style yaml files",
  "type": "object",
  "properties": {
    "waveform-width": {
      "type": "number"
    },
    "max-time": {
      "type": "integer"
    },
    "time-unit-width": {
      "type": "number"
    },
    "global": {
      "$ref": "#/$defs/style",
      "required": [
        "show",
        "height",
        "slope-width",
        "margin",
        "text-margin",
        "line-thickness",
        "font-size",
        "line-color",
        "text-color",
        "show-value",
        "radix",
        "fixed-point-shift",
        "value-font-size",
        "value-text-color"
      ],
      "not": {
        "anyOf": [
          {"required": ["id"]},
          {"required": ["name"]}
        ]
      }
    },
    "signals": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/style",
        "anyOf": [
          {"required": ["id"]},
          {"required": ["path"]}
        ]
      }
    }
  },
  "$defs": {
    "style": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "show": {
          "type": "boolean"
        },
        "height": {
          "type": "number"
        },
        "slope-width": {
          "type": "number"
        },
        "margin": {
          "type": "number"
        },
        "text-margin": {
          "type": "number"
        },
        "line-thickness": {
          "type": "number"
        },
        "font-size": {
          "type": "number"
        },
        "line-color": {
          "type": "string"
        },
        "text-color": {
          "type": "string"
        },

        "show-value":{
          "type": "boolean"
        },
        "radix":{
          "type": "integer"
        },
        "fixed-point-shift":{
          "type": "integer"
        },
        "value-font-size":{
          "type": "number"
        },
        "value-text-color":{
          "type": "string"
        }
      }
    }
  }
}