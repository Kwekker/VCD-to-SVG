{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Styles",
  "description":
    "Cool schema for svg style yaml files",
  "type": "object",
  "properties": {
    "waveform-width": {"type": "number"},
    "max-time": {"type": "integer"},
    "time-unit-width": {"type": "number"},
    "global": {
      "$ref": "#/$defs/style",
      "required": ["line-color" ,"text-color" ,"line-thickness","slope-width","margin" ,"text-margin","font-size","height"],
      "not": {
        "anyOf": [
          {"required": ["id"]},
          {"required": ["name"]}
        ]
      }
    },
    "signals": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/style",
        "anyOf": [
          {"required": ["id"]},
          {"required": ["path"]}
        ]

      }

    }

  },
  "$defs": {
    "style": {
      "type": "object",
      "properties": {
        "id": {"type": "string"},
        "path": {"type": "string"},
        "show": {"type": "boolean"},
        "line-color"  : {"type": "string"},
        "text-color"  : {"type": "string"},
        "line-thickness" : {"type": "number"},
        "slope-width" : {"type": "number"},
        "margin"  : {"type": "number"},
        "text-margin" : {"type": "number"},
        "font-size" : {"type": "number"},
        "height"  : {"type": "number"}
      }
    }
  }
}